<h2>Upcoming Fitness Classes</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Level</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @upcoming_fitnessclasses.each do |fitnessclass| %>
  <tr>
    <td><%= fitnessclass.title %></td>
    <td><%= fitnessclass.level %></td>
    <td><%= fitnessclass.startdate.strftime('%B %d, %Y') %></td>
    <td><%= fitnessclass.enddate.strftime('%B %d, %Y') %></td>
    <td><%= link_to 'Show', fitnessclass %></td>
    <td><%= link_to 'Edit', edit_fitnessclass_path(fitnessclass) %></td>
    <td><%= link_to 'Destroy', fitnessclass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

